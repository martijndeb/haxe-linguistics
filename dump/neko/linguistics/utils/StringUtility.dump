class linguistics.utils.StringUtility{
	public new(method) : Void -> Void

	 = function() = {
	};

	static public isEmpty(method) : myString : String -> Bool

	 = function(myString:String) = {
		return ! (myString == null || myString.length < 1 || StringTools.trim(myString).length < 1);
	};

	static public replaceLastOccurance(method) : myString : String -> mySearchString : String -> myReplaceString : String -> String

	 = function(myString:String,mySearchString:String,myReplaceString:String) = {
		var index = myString.lastIndexOf(mySearchString,null);
		var left = myString.substr(0,index);
		var right = myString.substr(index,null);
		right = StringTools.replace(right,mySearchString,myReplaceString);
		return left + right;
	};

}